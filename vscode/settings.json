{
  // GENERAL EDITOR SETTINGS
  "editor.fontFamily": "Fira Code",
  "editor.fontSize": 14,
  "editor.lineHeight": 0,
  "editor.fontLigatures": true,
  "editor.letterSpacing": 0.5,
  "editor.cursorStyle": "underline",
  "editor.cursorBlinking": "smooth",
  "editor.renderWhitespace": "all",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "window.title": "${dirty} ${activeEditorMedium}${separator}${rootName}",
  "editor.parameterHints.enabled": false,
  "vscode_custom_css.imports": [
    "file:///Users/codebryo/synthwave84.css"
  ],
  "vscode_custom_css.policy": true,
  // FORMATTING && LINTING
  "editor.formatOnSave": false, // Prevent collision with eslint
  "editor.formatOnPaste": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": false
  },
  // - PRETTIER
  "prettier.eslintIntegration": true,
  // - ESLINT
  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.run": "onType",
  "eslint.options": {
    "extensions": [ //List of file extensions to activate eslint
      ".html",
      ".js",
      ".vue",
      ".jsx"
    ]
  },
  "eslint.validate": [
    "javascript",
    {
      "language": "vue",
      "autoFix": true
    }
  ],
  // PRESENTATION SETTINGS
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "SynthWave '84",
  "window.zoomLevel": 0,
  "gitlens.keymap": "chorded",
  "gitlens.historyExplorer.enabled": true,
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },
  "gitlens.defaultDateFormat": "Do MM YYYY - hh:mm",
  "workbench.colorCustomizations": {
    "editor.selectionHighlightBorder": "#779c96",
    "editor.wordHighlightBorder": "#8fdef1",
    "editor.lineHighlightBorder": "#ffffff38",
  },
  "explorer.confirmDragAndDrop": false,
  "git.confirmSync": false,
  "breadcrumbs.enabled": true,
  "explorer.confirmDelete": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.lineHistory.enabled": true,
  "auto-close-tag.activationOnLanguage": [
    "xml",
    "php",
    "blade",
    "ejs",
    "jinja",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "plaintext",
    "markdown",
    "vue",
    "liquid",
    "erb",
    "lang-cfml",
    "cfml",
    "HTML (Eex)",
    "mjml"
  ],
  "workbench.startupEditor": "newUntitledFile",
  "prettier.singleQuote": true,
  "git.autofetch": true,
  "peacock.favoriteColors": [
    {
      "name": "Angular Red",
      "value": "#b52e31"
    },
